<Page x:Class="Demo.DisplayTextarea"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DisplayTextarea">

    <StackPanel>
		<GroupBox Header="Testbox">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="6px"/>
					<ColumnDefinition Width="1*"/>
					<ColumnDefinition Width="6px"/>
					<ColumnDefinition Width="1*"/>
					<ColumnDefinition Width="6px"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="48px"/>
				</Grid.RowDefinitions>

				<TextBox Grid.Column="1" Text="textbox"/>
				<TextBox Grid.Column="3" IsEnabled="False"  Text="textbox"/>

			</Grid>
		</GroupBox>
	</StackPanel>
</Page>
