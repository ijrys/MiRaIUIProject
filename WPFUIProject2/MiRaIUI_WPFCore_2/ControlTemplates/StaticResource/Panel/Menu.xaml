<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="StyleMenu" TargetType="{x:Type Menu}">
		<Setter Property="FontFamily" Value="{StaticResource Control_FontFamily_Default}"/>
		<Setter Property="FontSize" Value="{StaticResource Control_FontSize_Default}"/>
		<Setter Property="FontStretch" Value="{StaticResource Control_FontStretch_Default}"/>
		<Setter Property="FontStyle" Value="{StaticResource Control_FontStyle_Default}"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>


		<Setter Property="Background" Value="{DynamicResource Brush_Control_BG_Normal_Normal}"/>
		<Setter Property="Foreground" Value="{DynamicResource Brush_Control_FG_Normal_Normal}"/>


		<Style.Resources>
			<ResourceDictionary>
				<Style TargetType="MenuItem" BasedOn="{StaticResource StyleMenuItemLite}"/>
			</ResourceDictionary>
		</Style.Resources>
	</Style>
</ResourceDictionary>